@model FastFood.Core.ViewModels.Orders.CreateOrderViewModel

@{
    ViewData["Title"] = "Създай поръчка";
}
<h1 class="text-center">Създай поръчка</h1>
<hr class="bg-secondary half-width" />
<form class="mx-auto half-width" asp-controller="Orders" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Клиент</label>
        <input type="text" class="form-control" id="customer" placeholder="Въведете име на клиента..." name="customer">
    </div>
    <div class="form-group">
        <label for="employee">Служител №</label>
        <select id="employee" class="form-control" name="EmployeeId">
            @foreach (var employee in Model.Employees)
            {
                <option value="@employee">@employee</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="item">Продукт №</label>
        <select id="item" class="form-control" name="ItemId">
            @foreach (var item in Model.Items)
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="quantity">Количество</label>
        <input type="number" step="1" min="11" class="form-control" id="quantity" placeholder="Въведете количество..." name="quantity">
    </div>
    <hr class="bg-secondary half-width" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn-success">Създай поръчка</button>
    </div>
</form>